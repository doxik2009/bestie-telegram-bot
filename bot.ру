def next_keyboard():
    kb = ReplyKeyboardMarkup(resize_keyboard=True)
    kb.add(KeyboardButton("–î–ê–õ–¨–®–ï"))
    return kb

@dp.message_handler(commands=["newgame"])
async def new_game(message: types.Message):
    kb = ReplyKeyboardMarkup(resize_keyboard=True)
    kb.add("‚òï –ü–æ–¥ –∫–æ—Ñ–µ", "üç∑ –ë–µ—Å—Ç–∏—è")
    await message.answer(
        "‚òïüç∑ –§–û–†–ú–ê–¢ –ò–ì–†–´\n\n"
        "–ú–æ–∂–Ω–æ –∏–≥—Ä–∞—Ç—å:\n"
        "‚Äî –ø–æ–¥ —á–∞—à–∫—É –∫–æ—Ñ–µ\n"
        "‚Äî –ø–æ–¥ –±–æ–∫–∞–ª –≤–∏–Ω–∞\n\n"
        "–ú–æ–∂–Ω–æ:\n"
        "‚Äî –ø–∏—Å–∞—Ç—å –∫–æ—Ä–æ—Ç–∫–æ\n"
        "‚Äî –æ—Ç–≤–µ—á–∞—Ç—å –≤—Å–ª—É—Ö\n"
        "‚Äî –æ–±—Å—É–∂–¥–∞—Ç—å –æ—Ç–≤–µ—Ç—ã\n\n"
        "–≠—Ç–æ –Ω–µ —Ç–µ—Å—Ç, –∞ –ø–æ–≤–æ–¥ –ø–æ—Å–º–µ—è—Ç—å—Å—è üí¨",
        reply_markup=kb
    )

@dp.message_handler(lambda m: m.text in ["‚òï –ü–æ–¥ –∫–æ—Ñ–µ", "üç∑ –ë–µ—Å—Ç–∏—è"])
async def choose_mode(message: types.Message):
    mode = "coffee" if "–∫–æ—Ñ–µ" in message.text else "bestia"
    games[message.chat.id] = {
        "mode": mode,
        "index": 0,
        "questions": QUESTIONS_COFFEE if mode == "coffee" else QUESTIONS_BESTIA
    }
    kb = ReplyKeyboardMarkup(resize_keyboard=True)
    kb.add("–ì–û–¢–û–í–û")
    await message.answer(
        "–ú–æ–∂–Ω–æ –≤–≤–µ—Å—Ç–∏ –∏–º–µ–Ω–∞ —É—á–∞—Å—Ç–Ω–∏—Ü —á–µ—Ä–µ–∑ –∑–∞–ø—è—Ç—É—é\n"
        "–∏–ª–∏ –ø—Ä–æ—Å—Ç–æ –Ω–∞–∂–∞—Ç—å –ì–û–¢–û–í–û",
        reply_markup=kb
    )

@dp.message_handler(lambda m: m.text == "–ì–û–¢–û–í–û")
async def start_questions(message: types.Message):
    game = games.get(message.chat.id)
    if not game:
        return
    q = game["questions"][0]["q"]
    await message.answer(f"–í–æ–ø—Ä–æ—Å 1:\n\n{q}", reply_markup=next_keyboard())

@dp.message_handler(lambda m: m.text == "–î–ê–õ–¨–®–ï")
async def next_question(message: types.Message):
    game = games.get(message.chat.id)
    if not game:
        return

    game["index"] += 1
    if game["index"] >= len(game["questions"]):
        await message.answer("–ò–≥—Ä–∞ –æ–∫–æ–Ω—á–µ–Ω–∞ üíï\n–°–ø–∞—Å–∏–±–æ –∑–∞ –∞—Ç–º–æ—Å—Ñ–µ—Ä—É.")
        games.pop(message.chat.id)
        return

    comment = random.choice(BOT_COMMENTS)
    q = game["questions"][game["index"]]["q"]
    await message.answer(comment)
    await message.answer(
        f"–í–æ–ø—Ä–æ—Å {game['index'] + 1}:\n\n{q}",
        reply_markup=next_keyboard()
    )

if __name__ == "__main__":
    executor.start_polling(dp, skip_updates=True)
